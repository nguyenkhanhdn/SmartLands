@model SmartLands.Models.Area

@{
    ViewData["Title"] = "Create";
}

<h4>Thêm mới - Khu vực giám sát</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
