@model SmartLands.Models.Sensor

@{
    ViewData["Title"] = "Edit";
}

<h4>Thay đổi - Quản lý thiết bị</h4>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
